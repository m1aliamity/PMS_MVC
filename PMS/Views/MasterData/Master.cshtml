@model Models.ModelClasses.MasterModel
@using (Html.BeginForm()) 
{
    <hr />
    <div class="form-group">
        @Html.HiddenFor(model => model.Id)
        <label class="control-label col-sm-2">Master Data</label>
        <div class="col-sm-4">
            @Html.DropDownListFor(m => m.MID, new SelectList(Model.MasterList, "Value", "Text"), "--Select--",
                      new
                      {
                          @Class = "form-control",
                          @onchange = "MasterTypeData(0,'G')"
                      })
        </div>
        <label class="control-label col-sm-2">Master Name</label>
        <div class="col-sm-4">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Rate</label>
        <div class="col-sm-4">
            @Html.EditorFor(model => model.Rate, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <label class="control-label col-sm-2">Print Name</label>
        <div class="col-sm-4">
            @Html.EditorFor(model => model.PrintName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
            <input type="button" id="btnCreate" value="Save" OnClick="MasterTypeData(0,'I')" class="btn btn-default" />
            <input type="button" id="btnUpdate" style="display:none;" value="Update" OnClick="MasterTypeData(0,'U')" class="btn btn-default" />
        </div>
    </div>
    <div id="MasterList" class="form-group">

    </div>
}
<script src="~/Include/Local/JS/MasterDetails.js"></script>
