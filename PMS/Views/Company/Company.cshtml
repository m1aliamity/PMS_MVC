@model Models.ModelClasses.CompanyModel
@{
    ViewBag.Title = "Create Company";
}
@using (Html.BeginForm())
{
    <div class="form-control">
        <hr />
        <div class="form-group">
            <label class="control-label col-sm-2">Lab Name</label>
            <div class="col-md-4">
                @Html.HiddenFor(model => model.Id)
                @Html.EditorFor(model => model.CompanyName, new { htmlAttributes = new { @class = "form-control", required = "required" } })
            </div>
            <label class="control-label col-sm-2">Lab Slogan Name</label>
            <div class="col-sm-4">
                @Html.EditorFor(model => model.SloganName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2">Phone No</label>
            <div class="col-sm-4">
                @Html.EditorFor(model => model.PhoneNo, new { htmlAttributes = new { @class = "form-control", required = "required", onkeydown = "return ValidateMobileNumber(event,this.value);" } })
            </div>
            <label class="control-label col-sm-2">Email Id</label>
            <div class="col-sm-4">
                @Html.EditorFor(model => model.EmailId, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
       
        <div class="form-group">
            <label class="control-label col-sm-2">Website</label>
            <div class="col-sm-4">
                @Html.EditorFor(model => model.WebSite, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <label class="control-label col-sm-2">Lab Address</label>
            <div class="col-sm-4">
                @Html.TextAreaFor(model => model.StreetAddress, new { @class = "form-control", required = "required" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Show Detail On Print</label>
            <div class="col-sm-4">
                <div class="checkbox">
                    @Html.EditorFor(model => model.ShowDetail)
                </div>
            </div>
            <label class="control-label col-sm-2">Is Active</label>
            <div class="col-sm-4">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsActive)
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-4 col-md-8">
                <input type="button" id="btnCreate" value="Save" OnClick="CompanyOperation(0,'I')" class="btn btn-default" />
                <input type="button" id="btnUpdate" style="display:none;" value="Update" OnClick="CompanyOperation(0,'U')" class="btn btn-default" />
            </div>
        </div>
        <div id="CompanyList" class="form-group">

        </div>
    </div>
}
<script src="~/Include/Local/JS/Company.js"></script>
<script type="text/javascript">
    function validation() {
        debugger;
        if ($("#CompanyName").val() == "" || $("#SPOCId").val() == " ") {
            alert(ErrorMessage.CompanyName);
            return false;
        }
        return true;
    }
    $(document).ready(function () {
        debugger;
        CompanyOperation(0,'');
    });
</script>
