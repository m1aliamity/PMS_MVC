@model Models.ModelClasses.LabStaffModel
@using (Html.BeginForm())
{

<div class="form-control">
    <hr />
    <div class="form-group">
        @Html.HiddenFor(model => model.Id)
        <label class="control-label col-sm-2">First Name</label>
        <div class="col-sm-4">
            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <label class="control-label col-sm-2">Last Name</label>
        <div class="col-sm-4">
            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.HiddenFor(model => model.Id)
        <label class="control-label col-sm-2">Mobile No.</label>
        <div class="col-sm-4">
            @Html.EditorFor(model => model.MobileNo, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <label class="control-label col-sm-2">Email Id</label>
        <div class="col-sm-4">
            @Html.EditorFor(model => model.EmailId, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.HiddenFor(model => model.Id)
        <label class="control-label col-sm-2">Gander</label>
        <div class="col-sm-4">
            @Html.DropDownListFor(m => m.Gander, new SelectList(Model.GanderList, "Value", "Text"), "--Select--",
                      new
                      {
                          @Class = "form-control",
                          @onchange = "MasterTypeData(0,'G')"
                      })
        </div>
        <label class="control-label col-sm-2">Religion</label>
        <div class="col-sm-4">
            @Html.DropDownListFor(m => m.Religion, new SelectList(Model.ReligionList, "Value", "Text"), "--Select--",
                      new
                      {
                          @Class = "form-control",
                          @onchange = "MasterTypeData(0,'G')"
                      })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Mrital Status</label>
        <div class="col-sm-4">
            @Html.DropDownListFor(m => m.MritalStatus, new SelectList(Model.MritalStatusList, "Value", "Text"), "--Select--",
                       new
                       {
                           @Class = "form-control",
                           @onchange = "MasterTypeData(0,'G')"
                       })
        </div>
        <label class="control-label col-sm-2">SpauseName</label>
        <div class="col-sm-4">
            @Html.EditorFor(model => model.SpauseName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Date Of Birth</label>
        <div class="col-sm-4">
            @Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <label class="control-label col-sm-2">Anniversary Date</label>
        <div class="col-sm-4">
            @Html.EditorFor(model => model.AnniversaryDate, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Staff Type</label>
        <div class="col-sm-4">
            @Html.DropDownListFor(m => m.StaffType, new SelectList(Model.EmployeeTypeList, "Value", "Text"), "--Select--",
                       new
                       {
                           @Class = "form-control",
                           @onchange = "MasterTypeData(0,'G')"
                       })
        </div>
        <label class="control-label col-sm-2">Address</label>
        <div class="col-sm-4">
            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
            <input type="button" id="btnCreate" value="Save" OnClick="MasterTypeData(0,'I')" class="btn btn-default" />
            <input type="button" id="btnUpdate" style="display:none;" value="Update" OnClick="MasterTypeData(0,'U')" class="btn btn-default" />
        </div>
    </div>
</div>}

