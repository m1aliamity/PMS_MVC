@model Models.ModelClasses.LabStaffModel
@using (Html.BeginForm())
{
    <hr />
    <div class="form-group">
        @Html.HiddenFor(model => model.Id)
        <label class="control-label col-sm-2">First Name</label>
        <div class="col-sm-4">
            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <label class="control-label col-sm-2">Last Name</label>
        <div class="col-sm-4">
            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.HiddenFor(model => model.Id)
        <label class="control-label col-sm-2">Mobile No.</label>
        <div class="col-sm-4">
            @Html.EditorFor(model => model.MobileNo, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <label class="control-label col-sm-2">Email Id</label>
        <div class="col-sm-4">
            @Html.EditorFor(model => model.EmailId, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.HiddenFor(model => model.Id)
        <label class="control-label col-sm-2">Gander</label>
        <div class="col-sm-4">
            @Html.DropDownListFor(m => m.Gender, new SelectList(Model.GenderList, "Value", "Text"), "--Select--",
                      new
                      {
                          @Class = "form-control"
                      })
        </div>
        <label class="control-label col-sm-2">Religion</label>
        <div class="col-sm-4">
            @Html.DropDownListFor(m => m.Religion, new SelectList(Model.ReligionList, "Value", "Text"), "--Select--",
                      new
                      {
                          @Class = "form-control"
                      })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Mrital Status</label>
        <div class="col-sm-4">
            @Html.DropDownListFor(m => m.MritalStatus, new SelectList(Model.MritalStatusList, "Value", "Text"), "--Select--",
                       new
                       {
                           @Class = "form-control"
                       })
        </div>
        <label class="control-label col-sm-2">SpauseName</label>
        <div class="col-sm-4">
            @Html.EditorFor(model => model.SpauseName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Date Of Birth</label>
        <div class="col-sm-4">
            <input type="text" id="DateOfBirth" readonly="readonly" class="form-control" />
            @*@Html.EditorFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })*@
        </div>
        <label class="control-label col-sm-2">Anniversary Date</label>
        <div class="col-sm-4">
            <input type="text" id="AnniversaryDate" readonly="readonly" class="form-control" />
            @*@Html.EditorFor(model => model.AnniversaryDate, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })*@
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Staff Type</label>
        <div class="col-sm-4">
            @Html.DropDownListFor(m => m.StaffType, new SelectList(Model.EmployeeTypeList, "Value", "Text"), "--Select--",
                       new
                       {
                           @Class = "form-control"
                       })
        </div>
        <label class="control-label col-sm-2">Address</label>
        <div class="col-sm-4">
            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
            <input type="button" id="btnCreate" value="Save" OnClick="LabStaffOperations(0,'I')" class="btn btn-default" />
            <input type="button" id="btnUpdate" style="display:none;" value="Update" OnClick="LabStaffOperations(0,'U')" class="btn btn-default" />
        </div>
    </div>
    }
<script type="text/javascript">
    $(document).ready(function () {
        $('#DateOfBirth,#AnniversaryDate').datetimepicker({
            //yearOffset: 222,
            //lang: 'ch',
            timepicker: false,
            theme: 'dark',
            format: 'd/m/Y',
            formatDate: 'Y/m/d',
            showOptions: {
                origin: ["top", "left"]
            }
            //minDate: '-1970/01/02', // yesterday is minimum date
            //maxDate: '+1970/01/02' // and tommorow is maximum date calendar
        });
       
    });
</script>
<script src="~/Include/Local/JS/LabStaff.js"></script>
