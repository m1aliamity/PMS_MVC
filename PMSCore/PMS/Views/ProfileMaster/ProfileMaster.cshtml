@model Models.Pathology.TestMasterModel;
@{ ViewData["Title"] = "ProfileMaster";
    Layout = "~/Views/Shared/_Layout.cshtml"; }
<form>
    <div class="row">
        <div class="col-sm-5">
            <div class="form-group row">
                <label for="colFormLabelSm" class="col-sm-3 col-form-label col-form-label-sm">Department:<span class="mandatory"><b>*</b></span></label>
                <div class="col-sm-9">
                    @Html.DropDownListFor(m => m.DepartmentId, new SelectList(Model.PathologyDepartmentList, "Value", "Text"), "--Select--",
                                                                     new
                                                                     {
                                                                         @Class = "form-control form-control-sm",
                                                                         @onchange = "GetTestHeadMaster()"
                                                                     })
                </div>
            </div>
            <div class="form-group row">
                <label for="colFormLabelSm" class="col-sm-3 col-form-label col-form-label-sm">Test Head:<span class="mandatory"><b>*</b></span></label>
                <div class="col-sm-9">
                    <select class="form-control form-control-sm" id="TestHeadId" onchange="GetTestDetails('')">
                        <option value="0" selected>--Select--</option>
                    </select>
                </div>
            </div>
            <div class="form-group row" id="tblTestList">
                
            </div>
        </div>
        <div class="col-sm-5">
            <div class="form-group row" style="margin-top:10px; margin-bottom:10px;">
                <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Profile:<span class="mandatory"><b>*</b></span></label>
                <div class="col-sm-10">
                    @Html.DropDownListFor(m => m.ProfileId, new SelectList(Model.ProfileList, "Value", "Text"), "--Select--",
                                                                          new
                                                                          {
                                                                              @Class = "form-control form-control-sm",
                                                                              @onchange = "ProfileOperations(0,'')"
                                                                          })
                </div>
            </div>
            <div class="form-group row" id="tblProfileDetailList">
                
            </div>
        </div>
    </div>
</form>
<script src="~/lib/Script/Local/Pathology/ProfileMaster.js"></script>
