
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PMS</title>
    <link href="~/lib/Script/Global/theme/css/style-2.3.0.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/Script/Global/theme/css/style-2.3.0.css">
    <link href="~/lib/CSS/Global/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/CSS/Global/jquery-ui.min.css" rel="stylesheet" />
</head>
<body>
    <main id="main">
        <div class="container">
            <div class="page-content">
                <form asp-controller="User" asp-action="UserLogin" method="post">
                    <input type="hidden" name="login" value="true">
                    <div class="members-form">
                        <label for="login-email" class="col-form-label col-form-label-sm">User Name<span class="mandatory"><b>*</b></span></label>
                        <input name="UserName" type="text" required class="form-control form-control-sm" id="txtUserName">
                        <div class="mb-4">
                            <label for="login-password" class="col-form-label col-form-label-sm">Password<span class="mandatory"><b>*</b></span></label>
                            <input name="password" type="password" required class="form-control form-control-sm" id="txtPassword">
                        </div>
                        <div class="mb-3 text-center">
                            <button type="submit" class="btn btn-outline-primary">Login</button>
                        </div>
                        <p class="text-center mb-0">
                            <a href="#">Lost your password?</a>
                        </p>
                    </div>
                </form>

            </div>
        </div>
    </main>
    <footer id="" style="position: fixed;left: 0;bottom: 0;width: 100%;text-align: center;border-top: 1px solid #3477b3;">
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
    <script src="~/lib/Script/Global/jquery-3.5.1.min.js"></script>
    <script src="~/lib/Script/BootStrap/bootstrap.js"></script>
    <script src="~/lib/Script/BootStrap/popper.min.js"></script>
    <script src="~/Scripts/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/Script/Global/theme/js/main-2.3.0.js"></script>
    <script src="~/lib/Script/Global/jquery-ui.min.js"></script>
    <script src="~/lib/Script/Local/Pathology/UserLogin.js"></script>
    @*<script>
            $(document).ready(function () {
                $("#date1").datepicker({
                    inline: true
                });
            });
        </script>*@
    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")*@
</body>
</html>
